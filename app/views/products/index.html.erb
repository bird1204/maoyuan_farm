<!-- Main -->
<div id="main" class="wrapper style4">
	<div class="container">
		<div class="row">
			<!-- Sidebar -->
			<%= render partial: 'products/left_section', locals: {categories: @categories}%>
			<!-- Content -->
			<div id="content" class="10u skel-cell-important">
				<%@products.each_with_index do |products, index|%>
				<section>
					<%= render partial: 'shared/breadcomb', locals: {path: @path} if index == 0%>
					<header class="major">
						<%="<h2>線上購物</h2>".html_safe  if index == 0%>
						<span class="byline" style="border-top:none;margin-top: 0;"><%=products.first.category.name%></span>
					</header>
					<div class="row">
						<%products.each do |product|%>
						<div class="4u">
							<section>
								<%=link_to product_path(product) do%>
								<%=image_tag '1905940_L.jpg', class: "feature image"%>
								<%end%>
								<header>
									<%=product.name%>
								</header>
								<span style="font-size:14px;"><%=product.comment%></span><br>
								優惠價：<span style="color:#FF4400; font-size:1.5em;">$<%=product.price%></span>
							</section>
						</div>
						<%end%>
					</div>
				</section>
				<%end%>
			</div>
		</div>
	</section>
</div>
<!--頁碼-->
<%= will_paginate @products %>
<div class="pagination">
	<a href="#" class="page gradient">first</a>
	<a href="#" class="page gradient">2</a>
	<a href="#" class="page gradient">3</a><span class="page active">4</span>
	<a href="#" class="page gradient">5</a>
	<a href="#" class="page gradient">6</a>
	<a href="#" class="page gradient">last</a>
</div>
</div>