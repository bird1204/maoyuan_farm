<!-- Main -->
<div id="main" class="wrapper style4">
	<div class="container">
		<div class="row">
			<!-- Sidebar -->
			<div id="sidebar" class="2u">
				<section>
					<header class="major">
						<h2>農友直銷</h2>
					</header>
					<ul class="default">
						<%@friends.each_with_index do |friend, index|%>
						<li><%=link_to friend, direct_selling_path(index + 1)%></li>
						<%end%>
					</ul>
				</section>
			</div>
			<!-- Content -->
			<div id="content" class="10u skel-cell-important">
				<section style="text-align:left;">
					<%= user_nav_bar%>
					<%= render partial: 'shared/breadcomb', locals: {path: @path}%>
					<header class="major">
						<h2><%=@title%></h2>
						<span class="byline"><%=@desc%></span>
					</header>
					<%=image_tag @image%>
					<%=@content.html_safe%>
				</section>
			</div>
		</div>
	</div>
</div>