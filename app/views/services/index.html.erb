<!-- Main -->
<div id="main" class="wrapper style4">
  <!-- Content -->
  <div id="content" class="container">
    <section>
      <%#= user_nav_bar%>
      <%= render partial: 'shared/breadcomb', locals: {path: @path}%>
      <header class="major">
        <h2>線上服務</h2>
        <span class="byline">若您有任何疑問，可以透過此表單詢問，或是直接<a href="#team">聯絡服務人員</a>。</span>
      </header>
      <%=form_tag services_path do %>
      <form id="contact" class="form-horizontal" role="form">
        <div class="form-group">
          <div class="col-sm-12">
            <%=text_field_tag 'user', nil,  placeholder: '大名*', class: 'form-control'%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%=email_field_tag 'email', nil, placeholder: 'email*', class: 'form-control'%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%=text_field_tag 'phone', nil, placeholder: '聯絡電話*', class: 'form-control'%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%=text_area_tag 'message', nil, placeholder: '留言內容*', class: 'form-control'%>
          </div>
        </div>
        <button id="send" name="send" class="btn btn-block">送出</button>
      <%end%>
    </section>
  </div>
</div>
<%=render partial: 'shared/team'%>