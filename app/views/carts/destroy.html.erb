<tr>
  <th><input type="checkbox" id="all" value="all"></th>
  <th>圖片</th>
  <th>商品</th>
  <th>庫存</th>
  <th>單價</th>
  <th>數量</th>
  <th>小計</th>
</tr>
<%@cart.shopping_cart_items.each do |items|%>
<tr>
  <td data-th="選取"><%=check_box_tag 'product', items.item_id%></td>
  <td><%=image_tag '1700866_L.jpg'%></td>
  <td data-th="商品"><%=items.item.name%></td>
  <td data-th="庫存"><%=items.item.stock%></td>
  <td data-th="單價">$ <%=items.item.price%></td>
  <td data-th="數量">
    <%=select_tag "#{items.item_id}_quantity", options_for_select(Array.new(10) { |index| index+1 }, @cart.quantity_for(items.item_id))%>
  </td>
  <td data-th="小計">$<%=@cart.subtotal_for(items.item_id)%></td>
</tr>
<%end%>
