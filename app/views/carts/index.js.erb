<%if params[:product_ids].present?%>
  html ="<tr><th><input type='checkbox' id='all' value='all'></th><th>圖片</th><th>商品</th><th>庫存</th><th>單價</th><th>數量</th><th>小計</th</tr>"
  <%@cart.shopping_cart_items.each do |items|%>
  html += "<tr><td data-th='選取'>"
  html += '<%=check_box_tag "product", items.item_id%>'
  html += "</td><td>"
  html += '<%=image_tag "1700866_L.jpg"%>'
  html += "</td><td data-th='商品'>"
  html += "<%=items.item.name%>"
  html += "</td><td data-th='庫存'>"
  html += "<%=items.item.stock%>"
  html += "</td><td data-th='單價'>$ "
  html += "<%=items.item.price%>"
  html += "</td><td data-th='數量'>"
  html +='<select name="product_amount" id="product_amount" disabled="disabled"><option selected="selected" value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9">9</option><option value="10">10</option></select>'
  html += "</td><td data-th='小計'>$"
  html += "<%=@cart.subtotal_for(items.item_id)%>"
  html += "</td></tr>"
  <%end%>
  $('#carts').html(html)
<%end%>